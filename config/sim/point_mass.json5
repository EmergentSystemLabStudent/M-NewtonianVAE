{
  model: "NewtonianVAE",

  NewtonianVAE: {
    dim_x: 2,
    camera_name: "top",

    velocity: {
      // good result either way
      fix_abc: [0, 0, 1],
      // fix_abc: null,
    },

    transition: {
      std: 0.001,
    },

    encoder: {
      model: "VanillaEncoder",
      model_kwargs: {
        dim_output: 1024,
      },
    },

    decoder: {
      model: "SpatialBroadcastDecoder",
    },
  },

  train: {
    path: "data/point_mass/episodes/{0..999}.*",
    batch_size: 10,
    epochs: 300,
    learning_rate: 3e-4,
    max_time_length: 100,
    device: "cuda",
    dtype: "float32",
    save_per_epoch: 50,
    check_value: false,
    gradscaler_args: {},
    use_autocast: true,
    load_all: true,
  },

  valid: {
    path: "data/point_mass/episodes/{1000..1199}.*",
  },

  test: {
    path: "data/point_mass/episodes/{1200..1399}.*",
    device: "cuda",
    dtype: "float32",
  },

  sim_env: "ControlSuite",

  ControlSuite: {
    env: "point_mass-easy",
    seed: 1,
    max_episode_length: 100,
    imgsize: [64, 64],
    // ***
    action_type: "random_walk",
    task_settings: {
      target_size: 0.0,
      target_position: "default",
      // target_position: "random",
    },
  },

  path: {
    saves_dir: "save/point_mass/saves",
    results_dir: "save/point_mass/results",
    hidden_conf: "config/_hidden_conf.json5",
  },

  others: {
    /*
      Paper:
      In the point mass experiments
      we found it useful to anneal the KL term in the ELBO,
      starting with a value of 0.001 and increasing it linearly
      to 1.0 between epochs 30 and 60.
    */
    beta_schedule: { linear1: [30, 60, 0.001, 1] },

    keypaths: [
      "action", //
      "delta",
      "position",
      ["camera", "top"],
    ],

    HandyForImage: {
      size: [64, 64],
      bit_depth: 5,
    },
  },
}
